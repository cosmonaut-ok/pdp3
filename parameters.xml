<?xml version="1.0" encoding="UTF-8"?>
<!-- edited with XMLSpy v2011 rel. 2 -->
<initial_parameters>

  <!-- use debug mode with low resolution and macroparticles number and long data dump interval -->
  <debug>false</debug>

  <geometry>
    <r_size>0.25</r_size>
    <z_size>2.0</z_size>
    <n_grid_r>255</n_grid_r>
    <n_grid_z>2047</n_grid_z>
    <debug_n_grid_r>31</debug_n_grid_r>
    <debug_n_grid_z>255</debug_n_grid_z>
  </geometry>

  <pml>
    <comparative_l_1>0</comparative_l_1>
    <comparative_l_2>0</comparative_l_2>
    <comparative_l_3>0</comparative_l_3>
    <sigma_1>1e-5</sigma_1>
    <sigma_2>7e-2</sigma_2>
  </pml>

  <time>
    <start_time>0</start_time>
    <relaxation_time>0</relaxation_time>
    <current_time>0</current_time>
    <end_time>5e-8</end_time>
    <delta_t>1e-13</delta_t>
  </time>

  <!-- number_of_part_kinds: 2 -->

  <particles>
    <particle_kind>
      <name>electrons</name>
      <charge>-1</charge>
      <mass>1</mass> <!-- electron mass -->
      <number>1e6</number>
      <debug_number>1e4</debug_number>
      <left_density>1e16</left_density>
      <right_density>1.05e16</right_density>
      <temperature>1.0</temperature>
    </particle_kind>

    <particle_kind>
      <name>ions</name>
      <charge>1</charge>
      <mass>1836</mass> <!-- electron mass -->
      <number>1e6</number>
      <debug_number>1e4</debug_number>
      <left_density>1e16</left_density>
      <right_density>1.05e16</right_density>
      <temperature>0.1</temperature>
    </particle_kind>
  </particles>

  <particles_bunch>
    <name>electrons</name>
    <charge>-1</charge>
    <mass>1</mass>
    <number>1e6</number>
    <debug_number>1e4</debug_number>
    <duration>1e-10</duration>
    <radius>0.02</radius>
    <density>1e15</density>
    <initial_velocity>2e8</initial_velocity>
  </particles_bunch>

  <boundary_maxwell_conditions>
    <e_fi_upper>0</e_fi_upper>
    <e_fi_left>0</e_fi_left>
    <e_fi_right>0</e_fi_right>
  </boundary_maxwell_conditions>

  <boundary_conditions type = "dirichlet">0</boundary_conditions>

  <file_save_parameters>
    <path_to_result>pdp3_result/</path_to_result>
    <path_to_save_state>pdp3_result/dump/</path_to_save_state>
    <compress_result>true</compress_result><!-- not implemented -->
    <!-- -->
    <data_dump_interval>5</data_dump_interval>
    <debug_data_dump_interval>20</debug_data_dump_interval>
    <frames_per_file>100</frames_per_file> <!-- how many image frames should be placed in one data file -->
    <system_state_dump_interval>1000</system_state_dump_interval>
    <!-- <time_step>100</time_step>-->
    <!-- <number>100</number>-->
    <dump_data>
      <E_r>true</E_r>
      <E_phi>false</E_phi>
      <E_z>true</E_z>
      <H_r>false</H_r>
      <H_phi>false</H_phi>
      <H_z>false</H_z>
      <rho_bunch>true</rho_bunch>
    </dump_data>
  </file_save_parameters>

</initial_parameters>
